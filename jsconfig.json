{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react",
    "checkJs": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "pages/*": ["components/pages/*"],
      "shared/*": ["components/shared*"],
      "store/*": ["store/*"],
      "utils/*": ["utils/*"]
    }
  },

  "include": ["src", "jest"],
  "exclude": ["node_modules", "dist"]
}
