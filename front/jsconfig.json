{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "jsx": "react",
        "checkJs": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "paths": {
            "atoms/*": ["components/atoms/*"],
            "molecules/*": ["components/molecules/*"],
            "organismes/*": ["components/organismes/*"],
            "containers/*": ["containers/*"],
            "store/*": ["store/*"],
            "Utils/*": ["Utils/*"]
        }
    },
    "include": ["src", "public/lib-web-components"],
    "exclude": ["node_modules", "**/node_modules/*"]
}